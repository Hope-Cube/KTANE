<Page x:Class="KTANE.mazePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KTANE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Maze">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Height="50" HorizontalAlignment="Center">
            <TextBox x:Name="identifier_text" Width="100" FontSize="30"/>
            <TextBox x:Name="p1_text" Width="100" FontSize="30"/>
            <TextBox x:Name="p2_text" Width="100" FontSize="30" TextChanged="p2_text_TextChanged"/>
        </StackPanel>
        <TextBlock x:Name="direction_display" Grid.Row="1" FontSize="20"/>
        <Button x:Name="back_button" Grid.Row="2" Content="Back" Width="100" Height="50" FontSize="20" Click="back_button_Click"/>
    </Grid>
</Page>
